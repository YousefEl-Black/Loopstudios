doctype html
html(lang="en")
  head
    // Start Meta
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description", content="Loopstudios")
    // End Meta

    // Start CSS Files
    link(rel="stylesheet", href="css/all.min.css")
    link(rel="stylesheet", href="css/normalize.css")
    link(rel="stylesheet", href="css/global.rules.css")
    link(rel="stylesheet", href="css/bootstrap.min.css")
    link(rel="stylesheet", href="css/style.css")
    // End CSS Files

    // Start Google Fonts
    include googlefonts
    // End Google Fonts

    // Start Title
    title Loopstudios
    // End Title

    // Start Shortcut Icon
    link(rel="shortcut icon", href="imgs/logo-icon.ico")
    // End Shortcut Icon

  body
    .header-landing
      .container(class="py-3")
        // Start Header
        include header
        // End Header

        // Start Landing
        .landing(class="d-flex justify-content-center align-items-center col-lg-7")
          .text
            -var vals = ["Immeersive", "Experiences", "Thet Deliver"]
            each val in  vals 
              p(class="text-white")= val
        // End Landing
    
    // Start About
    .about
      .container(class="py-5 py-md-0 d-flex flex-md-row flex-column align-items-center position-relative")
        .empty(class="col-5")
        .image
          img(class="d-none d-md-block" src="imgs/desktop/image-interactive.jpg", alt="")
          img(class="d-block d-md-none img-fluid" src="imgs/mobile/image-interactive.jpg", alt="")
        .text(class="col-7 text-center text-md-start")
          h1 The Leader In Interactive VR
          p.
            Founded in 2011, Loopstudios has 
            been producing world-class virtual 
            reality project for some of the best 
            companies around the globe. 
            Our award-winning creations have 
            transformed businesses through 
            digital expreiences that bind to 
            thier brand.
    // End About

    // Start Our Creations
    .our-creations(class="my-5 py-4")
      .container
        .top(class="d-flex justify-content-between py-4")
          .title(class="text-center text-md-start")
            h1 Our Creations
          .btn(class="d-none d-md-flex justify-content-center align-items-center rounded py-0 px-4") See All
        .creations
          .creation(class="my-3 my-md-0")
            .image
              img(class="d-none d-md-block img-fluid" src="imgs/desktop/image-deep-earth.jpg", alt="")
              img(class="d-block d-md-none img-fluid" src="imgs/mobile/image-deep-earth.jpg", alt="")
            h2 Deep Earth
          .creation(class="my-3 my-md-0")
            .image
              img(class="d-none d-md-block img-fluid" src="imgs/desktop/image-night-arcade.jpg", alt="")
              img(class="d-block d-md-none img-fluid" src="imgs/mobile/image-night-arcade.jpg", alt="")
            h2 Night Arcade
          .creation(class="my-3 my-md-0")
            .image
              img(class="d-none d-md-block img-fluid" src="imgs/desktop/image-soccer-team.jpg", alt="")
              img(class="d-block d-md-none img-fluid" src="imgs/mobile/image-soccer-team.jpg", alt="")
            h2 Soccer Team VR
          .creation(class="my-3 my-md-0")
            .image
              img(class="d-none d-md-block img-fluid" src="imgs/desktop/image-grid.jpg", alt="")
              img(class="d-block d-md-none img-fluid" src="imgs/mobile/image-grid.jpg", alt="")
            h2 The Grid
          .creation(class="my-3 my-md-0")
            .image
              img(class="d-none d-md-block img-fluid" src="imgs/desktop/image-from-above.jpg", alt="")
              img(class="d-block d-md-none img-fluid" src="imgs/mobile/image-from-above.jpg", alt="")
            h2 From Up Above VR 
          .creation(class="my-3 my-md-0")
            .image
              img(class="d-none d-md-block img-fluid" src="imgs/desktop/image-pocket-borealis.jpg", alt="")
              img(class="d-block d-md-none img-fluid" src="imgs/mobile/image-pocket-borealis.jpg", alt="")
            h2 Pocket Borealis
          .creation(class="my-3 my-md-0")
            .image
              img(class="d-none d-md-block img-fluid" src="imgs/desktop/image-curiosity.jpg", alt="")
              img(class="d-block d-md-none img-fluid" src="imgs/mobile/image-curiosity.jpg", alt="")
            h2 The Curiosity
          .creation(class="my-3 my-md-0")
            .image
              img(class="d-none d-md-block img-fluid" src="imgs/desktop/image-fisheye.jpg", alt="")
              img(class="d-block d-md-none img-fluid" src="imgs/mobile/image-fisheye.jpg", alt="")
            h2 Make It Fisheye
        div(class="w-100 d-flex justify-content-center")
          .btn(class="d-flex d-md-none justify-content-center align-items-center rounded py-2 px-4") See All
    // End Our Creations


    // Start Footer
    include footer
    // End Footer
    
    // Start Scripts Files
    include scripts
    // End Scripts Files
